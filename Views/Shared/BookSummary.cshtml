@{
}

@model Book

<div class="card card-outline-primary m-1 p-1" data-toggle="tooltip" title="@Model.Title is a really cool book, you should buy it!">
    <div class="bg-light p-1">
        <h4>
            @Model.Title
            <span class="badge rounded-pill btn-primary badge-primary bg-primary " style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Author: @Model.Author</li>
            <li>Category: @Model.Classification --  @Model.Category</li>
            <li>Page Count: @Model.PageCount pages</li>
            <li>ISBN number: @Model.Isbn</li>
            <li>Publisher: @Model.Publisher</li>
        </ul>
    </div>

    <form method="post" asp-page="/Checkout">

        <input type="hidden" asp-for="@Model.BookId" />

        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
        </span>
    </form>

</div>


