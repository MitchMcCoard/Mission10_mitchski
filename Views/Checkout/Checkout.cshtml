@{
}
@model Transaction

    <h1>Checkout</h1>
    <p>Soon you'll be lounging in your favorite chair, deep in a good book</p>
    <form asp-action="Checkout" asp-controller="Checkout" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <h4>Ship to</h4>
        <div class="form-group">
            <label asp-for="Name">Name: </label><input asp-for="Name" class="form-control" />
        </div>

        <h4>Address</h4>
        <div class="form-group">
            <label asp-for="AddressLine1">Address Line 1: </label><input asp-for="AddressLine1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AddressLine2">Address Line 2: </label><input asp-for="AddressLine2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AddressLinee3">Address Line 3: </label><input asp-for="AddressLinee3" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="City">City: </label><input asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="State">State: </label><input asp-for="State" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Zip">Zip Code: </label><input asp-for="Zip" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Country">Country: </label><input asp-for="Country" class="form-control" />
        </div>
        @*<div class="btn-check">
            <label asp-for="isGift">Is this a gift?: </label><input asp-for="isGift" />
        </div>*@
        <div class="float-end">
            <input class="btn btn-primary"  type="submit" value="Checkout" />
        </div>
    </form>